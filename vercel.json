{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "apps/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/[^.]+",
      "dest": "/apps/frontend/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/apps/frontend/$1"
    }
  ]
}